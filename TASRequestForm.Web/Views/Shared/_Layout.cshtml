<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SUNY Cortland</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Condensed:400,300,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/bundles/css")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("styles", required: false)
</head>
<body style="position: relative; z-index: 0;">
    <div id="navigation" style="background: #b91000;">
        <div class="container">
            <div class="navbar-header">
                <div id="nav-logo">
                    <a href="http://www2.cortland.edu">
                        <img src="@Url.Content("~/Content/images/sclogo-w-mob.png")" alt="SUNY Cortland" />
                    </a>
                </div>
            </div>
        </div>
    </div>
    <section id="container">
        <header class="container-fluid cort-red visible-lg visible-md hidden-sm hidden-xs cort-header" style="height: 60px;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="cort-logo" style="top: 0;">
                            <a href="index.html">
                                <img src="@Url.Content("~/Content/images/logo-white.png")" alt="SUNY Cortland" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
    </section>

    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/knockout")
    @RenderSection("scripts", required: false)
</body>
</html>
