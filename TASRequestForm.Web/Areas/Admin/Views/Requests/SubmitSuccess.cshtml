@using TASRequestForm.Core.Data.Entities
@model FormEntry

@{
    ViewBag.Title = "StudentSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid cort-white">
    <div class="container">
        <div class="row" style="margin-top: 20px;">
            <div class="col-lg-12">
                <div class="alert alert-success" style="margin-top: 20px;">
                    <h2>Success!</h2>
                    <p>
                        You have submitted a Test Administration Services Request on behalf of <strong>@Model.StudentIdentity.FirstName @Model.StudentIdentity.LastName</strong>.
                        <br />
                        The Test Administration Services Request has been sent to instructor
                        <em>@Model.ProfessorIdentity.FirstName @Model.ProfessorIdentity.LastName</em> for the course <em>@Model.Course</em> to be approved/declined.
                    </p>
                    <p>
                        <a href="@Url.Action("Index", new { controller = "Home", area = "Admin" })">&laquo; Back to the dashboard</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>