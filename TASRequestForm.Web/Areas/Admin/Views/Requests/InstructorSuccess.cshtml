@using TASRequestForm.Core.Data.Entities
@model FormEntry

@{
    ViewBag.Title = "Instructor Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid cort-white">
    <div class="container">
        <div class="row" style="margin-top: 20px;">
            <div class="col-lg-12">
                <div class="alert alert-success" style="margin-top: 20px;">
                    <h2>Success!</h2>
                    <p>
                        You have approved a Test Administration Services Request on behalf of <strong>@Model.ProfessorIdentity.FirstName @Model.ProfessorIdentity.LastName</strong> from the student
                        <em>@Model.StudentIdentity.FirstName @Model.StudentIdentity.LastName</em> for the course <em>@Model.Course</em>.
                    </p>
                    <p>
                        <a href="@Url.Action("Index", new { controller = "Home", area = "Admin" })">&laquo; Back to the dashboard</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>